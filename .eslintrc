{
	"extends": [
		"airbnb",
		"plugin:react/recommended"
	],
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true
	},
	"plugins": [
		"flow-vars",
		"react"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"rules": {
		"no-tabs": "off",
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"jsx-a11y/no-marquee": "off",
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"react/jsx-indent": [
			2,
			"tab"
		],
		"react/jsx-indent-props": [
			2,
			"tab"
		],
		"react/no-array-index-key": "off",
		"jsx-a11y/no-static-element-interactions": "off",
		"react/jsx-boolean-value": "off"
	},
	"globals": {
        "google": true
    }
}
